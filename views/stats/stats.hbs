<h1 class="title">{{title}}</h1> {{#if coed}}
<table>
    <thead>
        <tr>
            <th scope="col">Team</th>
            <th scope="col">Wins</th>
            <th scope="col">Losses</th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        {{#each coed}}
        <tr>
            <td>{{teamName}}</td>
            <td>{{wins}}</td>
            <td>{{losses}}</td>
            <form class=addPlayer action="/statdetails">
                <td>
                    <input type=hidden name="_id" value="{{_id}}" />
                    <button class="button--xsm">details</button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
