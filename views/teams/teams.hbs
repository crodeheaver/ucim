<h1 class="title">{{title}}</h1>
<form class=addPlayer action="/addTeam">
    <button>Add New Team</button>
</form>


<table>
    <thead>
        <tr>
            <th scope="col">Team</th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        {{#each teams}}
        <form method="POST" action="/editteam">
            <tr>
                <td>{{teamName}}</td>
                <td>
                    <input type=hidden name="_id" value="{{_id}}" />
                    <button class="button--xsm">edit</button>
                </td>
            </tr>
        </form>
        {{/each}}
    </tbody>
</table>