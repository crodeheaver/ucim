<h1 class="title">{{title}}</h1> 
{{#each sections}}
<h3>{{_id}}</h3>
<table>
    <thead>
        <tr>
            <th scope="col">Team</th>
            <th scope="col">Wins</th>
            <th scope="col">Losses</th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        {{#each teams}}
        <tr>
            <td>{{Name}}</td>
            <td>{{wins}}</td>
            <td>{{losses}}</td>
            <form class=addPlayer action="/stat/details">
                <td>
                    <input type=hidden name="_id" value="{{_id}}" />
                    <button class="button--xsm">details</button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/each}}